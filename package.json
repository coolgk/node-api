{
  "name": "@coolgk/node-mvc",
  "version": "1.0.1",
  "author": "Daniel Gong <daniel.k.gong@gmail.com>",
  "homepage": "https://github.com/coolgk/node-mvc.git",
  "bugs": {
    "url": "https://github.com/coolgk/node-mvc/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coolgk/node-mvc.git"
  },
  "description": "A light javascript / typescript mvc framework that helps you to create object oriented, modulised and testable code",
  "keywords": [
    "mvc",
    "node framework",
    "framework"
  ],
  "dependencies": {
    "@coolgk/url": "^2.0.5",
    "@types/node": "^9.4.0"
  },
  "devDependencies": {
    "@coolgk/amqp": "^2.0.3",
    "@coolgk/formdata": "^2.0.3",
    "@coolgk/jwt": "^2.0.5",
    "@coolgk/mvc": "^1.0.0",
    "@coolgk/session": "^1.0.1",
    "@coolgk/token": "^2.0.3",
    "@types/cookie": "^0.3.1",
    "@types/express": "^4.11.0",
    "@types/redis": "^2.8.5",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.3.0",
    "cookie": "^0.3.1",
    "coveralls": "^3.0.0",
    "del": "^3.0.0",
    "eslint": "^4.16.0",
    "eslint-config-google": "^0.9.1",
    "express": "^4.16.2",
    "gulp": "^3.9.1",
    "gulp-header": "^1.8.9",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-typescript": "^3.2.4",
    "jsdoc-to-markdown": "^3.0.4",
    "mkdirp-promise": "^5.0.1",
    "mocha": "^4.1.0",
    "nsp": "^3.1.0",
    "nyc": "^11.4.1",
    "pre-commit": "^1.2.2",
    "redis": "^2.8.0",
    "retire": "^1.4.0",
    "sinon": "^4.2.2",
    "snyk": "^1.69.5",
    "source-map-support": "^0.5.3",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "pretest": "tsc --project tsconfig.dev.json",
    "test": "export $(cat .env | xargs) && nyc mocha test",
    "test:quick": "export $(cat .env | xargs) && mocha test",
    "test:precommit": "export $(cat .env | xargs) && tsc --project tsconfig.dev.json && nyc --reporter text-summary mocha test --reporter min",
    "scan": "nsp check",
    "tslint": "tslint --exclude src/test.ts src/**/*.ts",
    "tsc": "tsc --project tsconfig.json",
    "tsc:dev": "tsc --project tsconfig.debug.json",
    "tsc:watch": "tsc --project tsconfig.debug.json -w --pretty",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "package": "gulp package",
    "debug:extended": "export $(cat .env | xargs) && nodemon --watch ./dist --inspect=0.0.0.0:9229 --nolazy ./dist/examples/typescript/index.express.extended.js",
    "debug:simple": "export $(cat .env | xargs) && nodemon --watch ./dist --inspect=0.0.0.0:9229 --nolazy ./dist/examples/typescript/index.express.simple.js",
    "debug:decoupled": "export $(cat .env | xargs) && nodemon --watch ./dist --inspect=0.0.0.0:9229 --nolazy ./dist/examples/typescript/index.express.decoupled.js"
  },
  "pre-commit": {
    "silent": false,
    "run": [
      "tslint",
      "test:precommit"
    ]
  },
  "license": "MIT"
}
